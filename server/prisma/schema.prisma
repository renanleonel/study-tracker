generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String   @id @default(uuid())
  title      String
  created_at DateTime

  dayHabits DayHabit[]
  weekDays  HabitWeekDays[]

  //renomeando a tabela
  @@map("habits")
}

// armazena a recorrência de um hábito
// 1 : n
// um hábito pra muitos dias da semana
model HabitWeekDays {
  id String @id @default(uuid())

  habit_id String
  week_day Int

  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day {
  id   String   @id @default(uuid())
  date DateTime

  dayHabits DayHabit[]

  //cada registro dentro dessa tabela precisa ter um campo date único
  @@unique([date])
}

// tabela pivô pra relacionar as tabelas Model e Day
model DayHabit {
  id String @id @default(uuid())

  day_id   String
  habit_id String

  //referência aos outros models
  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  //não é possível ter um mesmo hábito completado duas vezes no mesmo dia
  @@unique([day_id, habit_id])
  @@map("day_habits")
}
